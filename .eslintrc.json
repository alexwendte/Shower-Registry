{
  "extends": ["airbnb", "prettier"],
  "plugins": [
    "prettier",
	"html"
  ],
  "env": {"browser": true},
  "rules": {
    "no-unused-vars": 0,
    "no-console": 0,
    "no-shadow": [
      2,
      {
        "hoist": "all",
        "allow": ["resolve", "reject", "done", "next", "err", "error"]
      }
    ],
    "quotes": [
      1,
      "single",
      {
        "avoidEscape": true,
        "allowTemplateLiterals": true
      }
    ],
    "arrow-body-style": [2, "as-needed"],
    "spaced-comment": 1,
    "arrow-parens": [2, "always"],
    "comma-dangle": 0,
    "no-underscore-dangle": 0,
    "no-use-before-define": 0,
    "consistent-return": 0,
    "prettier/prettier": [
      "error",
      {
        "trailingComma": "es5",
        "singleQuote": true,
        "printWidth": 80,
        "arrowParens": "always"
      }
    ],
    "no-return-assign": 0

  }
}